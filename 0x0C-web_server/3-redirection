#!/usr/bin/env bash
# Configure your Nginx server so that /redirect_me is redirecting to another page.
sudo apt-get update
sudo apt-get install nginx -y
echo 'Hello World!' > /var/www/html/index.html
sudo sed -i 's@server_name _;@\tserver_name _;\n\trewrite ^ https://www.youtube.com/watch?v=QH2-TGUlwu4 permanent;@g' /etc/nginx/sites-available/default
sudo service nginx restart
