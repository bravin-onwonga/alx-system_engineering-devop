#!/usr/bin/env bash
# Define the strings for configuration
str='
server_name _;

location /redirect_me {
  return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
}
'

temp_file=$(mktemp)
sudo apt update
sudo apt install nginx -y
sudo sed -i 's|^listen\s*80;|listen 80 default_server;|g' /etc/nginx/sites-available/default
echo "$str" > "$temp_file"
sudo sed -i '/server_name _;/r '"$temp_file" /etc/nginx/sites-available/default
rm "$temp_file"
sudo nginx -s reload
